/**
 * Production Pipeline for User Service (Working Azure CLI Plugin)
 * 
 * Triggered on: Commits to 'main' branch
 * Purpose: Full testing, manual approval, and production deployment
 * 
 * USES JENKINS PLUGINS - Requires plugin installation and Global Tools configuration
 * 
 * Required Plugins:
 * - Pipeline
 * - Maven Integration  
 * - Azure CLI
 * - Kubernetes
 * - Docker Pipeline
 * - JUnit
 * - HTML Publisher
 * 
 * Required Global Tools:
 * - Maven-3.9
 * - Java-11
 * - Docker
 * 
 * Deploys to: ecommerce-prod namespace (with manual approval)
 */

// Load shared functions
def buildLib = load 'jenkins/shared/build-functions.groovy'

pipeline {
    agent any
    
    // Use configured tools from Global Tools
    tools {
        maven 'Maven-3.9'
        jdk 'Java-11'
    }
    
    // Only run on main branch
    when {
        branch 'main'
    }
    
    environment {
        SERVICE_NAME = 'user-service'
        ACR_NAME = 'acrecommerce69'
        AZURE_RESOURCE_GROUP = 'AKS-ecommerce'
        AKS_CLUSTER_NAME = 'KubeCluster'
        NAMESPACE = 'ecommerce-prod'
        SERVICE_PORT = '8700'
        MAVEN_OPTS = '-Xmx1024m'
    }
    
    stages {
        stage('üöÄ Checkout') {
            steps {
                echo "Starting PRODUCTION build for ${SERVICE_NAME}..."
                echo "Branch: ${env.BRANCH_NAME}"
                echo "Build: ${env.BUILD_NUMBER}"
                echo "Target: PRODUCTION environment"
                echo "‚ö†Ô∏è This will deploy to PRODUCTION!"
                
                // Clean workspace using plugin
                cleanWs()
                
                // Checkout source code
                checkout scm
                
                // Verify tools are available
                sh '''
                    echo "üîç Tool Verification:"
                    java -version
                    mvn -version
                    docker --version
                    az version
                '''
            }
        }
        
        stage('üî® Build Application') {
            steps {
                dir(SERVICE_NAME) {
                    echo "üî® Building ${SERVICE_NAME} for PRODUCTION..."
                    
                    // Use Maven plugin
                    sh 'mvn clean compile'
                }
            }
        }
        
        stage('üß™ Unit Tests') {
            steps {
                dir(SERVICE_NAME) {
                    echo "üß™ Running unit tests..."
                    
                    // Run tests with Maven
                    sh 'mvn test'
                }
            }
            post {
                always {
                    // Publish test results using JUnit plugin
                    junit testResultsPattern: "${SERVICE_NAME}/target/surefire-reports/TEST-*.xml",
                          allowEmptyResults: true
                    
                    // Publish test coverage using HTML Publisher plugin
                    publishHTML([
                        allowMissing: true,
                        alwaysLinkToLastBuild: true,
                        keepAll: true,
                        reportDir: "${SERVICE_NAME}/target/site/jacoco",
                        reportFiles: 'index.html',
                        reportName: 'Test Coverage Report'
                    ])
                }
            }
        }
        
        stage('üîó Integration Tests') {
            steps {
                dir(SERVICE_NAME) {
                    echo "üîó Running integration tests..."
                    
                    // Run integration tests with Maven
                    sh 'mvn verify -Dspring.profiles.active=test'
                }
            }
            post {
                always {
                    // Publish integration test results
                    junit testResultsPattern: "${SERVICE_NAME}/target/failsafe-reports/TEST-*.xml",
                          allowEmptyResults: true
                }
            }
        }
        
        stage('üîí Security Scans') {
            steps {
                dir(SERVICE_NAME) {
                    echo "üîí Running security scans for production..."
                    
                    // Security checks for production
                    sh '''
                        echo "üîí Running security checks..."
                        
                        # Check for security vulnerabilities in dependencies
                        mvn dependency:tree
                        
                        # Check for hardcoded secrets (basic check)
                        echo "=== Checking for potential secrets ==="
                        find src -name "*.java" -exec grep -Hn "password\\|secret\\|key\\|token" {} \\; || echo "No obvious secrets found"
                        
                        # Check for SQL injection patterns
                        echo "=== Checking for SQL injection patterns ==="
                        find src -name "*.java" -exec grep -Hn "Statement\\|createStatement" {} \\; || echo "No direct SQL statements found"
                        
                        echo "‚úÖ Basic security checks completed"
                    '''
                }
            }
        }
        
        stage('üì¶ Package Application') {
            steps {
                dir(SERVICE_NAME) {
                    echo "üì¶ Packaging application for production..."
                    
                    // Package with Maven
                    sh 'mvn package -DskipTests'
                    
                    // Archive artifacts using Jenkins built-in function
                    archiveArtifacts artifacts: 'target/*.jar', 
                                   fingerprint: true,
                                   allowEmptyArchive: true
                }
            }
        }
        
        stage('üê≥ Build & Push Docker Image') {
            steps {
                script {
                    echo "üê≥ Building and pushing Docker image for PRODUCTION..."
                    
                    // Generate production version tag
                    def imageTag = buildLib.generateVersionTag(env.BRANCH_NAME, env.BUILD_NUMBER)
                    echo "Production image tag: ${imageTag}"
                    
                    // Use working azureCLI configuration
                    azureCLI(
                        principalCredentialId: 'azure-credentials',
                        commands: [
                            [script: 'echo "üîë Azure CLI Authentication successful"'],
                            [script: 'az account show'],
                            [script: 'echo "üê≥ Logging into Azure Container Registry..."'],
                            [script: "az acr login --name ${ACR_NAME}"],
                            [script: 'echo "üî® Building Docker image for PRODUCTION..."'],
                            [script: "docker build -t ${ACR_NAME}.azurecr.io/${SERVICE_NAME}:${imageTag} -f ${SERVICE_NAME}/Dockerfile ."],
                            [script: 'echo "üì§ Pushing Docker image to ACR..."'],
                            [script: "docker push ${ACR_NAME}.azurecr.io/${SERVICE_NAME}:${imageTag}"],
                            [script: 'echo "üì§ Tagging as production-latest..."'],
                            [script: "docker tag ${ACR_NAME}.azurecr.io/${SERVICE_NAME}:${imageTag} ${ACR_NAME}.azurecr.io/${SERVICE_NAME}:production-latest"],
                            [script: "docker push ${ACR_NAME}.azurecr.io/${SERVICE_NAME}:production-latest"],
                            [script: 'echo "‚úÖ Production Docker image pushed successfully"']
                        ]
                    )
                    
                    // Store image tag for deployment
                    env.IMAGE_TAG = imageTag
                }
            }
        }
        
        stage('üèóÔ∏è Prepare Production Environment') {
            steps {
                script {
                    echo "üèóÔ∏è Preparing PRODUCTION environment..."
                    
                    // Use working azureCLI to get AKS credentials
                    azureCLI(
                        principalCredentialId: 'azure-credentials',
                        commands: [
                            [script: 'echo "‚ò∏Ô∏è Getting AKS credentials for PRODUCTION..."'],
                            [script: "az aks get-credentials --resource-group ${AZURE_RESOURCE_GROUP} --name ${AKS_CLUSTER_NAME} --overwrite-existing"],
                            [script: 'echo "üîç Verifying cluster connection..."'],
                            [script: 'kubectl cluster-info']
                        ]
                    )
                    
                    // Ensure namespace exists using kubectl
                    sh """
                        kubectl create namespace ${NAMESPACE} --dry-run=client -o yaml | kubectl apply -f -
                        echo "‚úÖ Namespace ${NAMESPACE} ready"
                    """
                    
                    // Apply Kubernetes configurations
                    sh """
                        if [ -d "k8s/services/${SERVICE_NAME}" ]; then
                            kubectl apply -f k8s/services/${SERVICE_NAME}/
                            echo "‚úÖ Kubernetes configuration applied"
                        else
                            echo "‚ö†Ô∏è No Kubernetes configuration found"
                        fi
                    """
                }
            }
        }
        
        stage('‚è∏Ô∏è Manual Approval') {
            steps {
                script {
                    echo "‚è∏Ô∏è PRODUCTION DEPLOYMENT APPROVAL REQUIRED"
                    echo "üîç Review the following before approving:"
                    echo "   ‚úÖ All tests passed"
                    echo "   ‚úÖ Security scans completed"
                    echo "   ‚úÖ Docker image built and pushed"
                    echo "   ‚úÖ Production environment prepared"
                    echo ""
                    echo "üìã Deployment Details:"
                    echo "   Service: ${SERVICE_NAME}"
                    echo "   Image: ${ACR_NAME}.azurecr.io/${SERVICE_NAME}:${env.IMAGE_TAG}"
                    echo "   Namespace: ${NAMESPACE}"
                    echo "   Build: ${env.BUILD_NUMBER}"
                    echo ""
                    echo "‚ö†Ô∏è This will deploy to PRODUCTION environment!"
                    
                    // Manual approval step
                    timeout(time: 30, unit: 'MINUTES') {
                        input message: 'Deploy to PRODUCTION?', 
                              ok: 'Deploy to Production',
                              submitterParameter: 'APPROVER',
                              parameters: [
                                  choice(name: 'DEPLOYMENT_TYPE', 
                                         choices: ['Rolling Update', 'Blue-Green'], 
                                         description: 'Select deployment strategy'),
                                  booleanParam(name: 'SKIP_HEALTH_CHECKS', 
                                              defaultValue: false, 
                                              description: 'Skip health checks (not recommended)')
                              ]
                    }
                    
                    echo "‚úÖ Production deployment approved by: ${env.APPROVER}"
                    echo "üìã Deployment strategy: ${params.DEPLOYMENT_TYPE}"
                }
            }
        }
        
        stage('üöÄ Deploy to Production') {
            steps {
                script {
                    echo "üöÄ Deploying to PRODUCTION Kubernetes..."
                    echo "üë§ Approved by: ${env.APPROVER}"
                    echo "üîÑ Strategy: ${params.DEPLOYMENT_TYPE}"
                    
                    try {
                        // Deploy to Kubernetes using kubectl directly
                        sh """
                            echo "üöÄ Updating PRODUCTION deployment with new image..."
                            kubectl set image deployment/${SERVICE_NAME} ${SERVICE_NAME}=${ACR_NAME}.azurecr.io/${SERVICE_NAME}:${env.IMAGE_TAG} -n ${NAMESPACE}
                            
                            echo "‚è≥ Waiting for PRODUCTION rollout to complete..."
                            kubectl rollout status deployment/${SERVICE_NAME} -n ${NAMESPACE} --timeout=600s
                            
                            echo "‚úÖ PRODUCTION deployment completed successfully"
                        """
                        
                    } catch (Exception e) {
                        echo "‚ùå PRODUCTION deployment failed: ${e.message}"
                        throw e
                    }
                }
            }
        }
        
        stage('ü©∫ Production Health Checks') {
            when {
                not { params.SKIP_HEALTH_CHECKS }
            }
            steps {
                script {
                    echo "ü©∫ Running PRODUCTION health checks..."
                    
                    // Wait for service to stabilize
                    sleep(time: 60, unit: 'SECONDS')
                    
                    // Extended health checks for production
                    timeout(time: 5, unit: 'MINUTES') {
                        sh """
                            echo "ü©∫ Testing PRODUCTION service health..."
                            
                            # Port forward in background
                            kubectl port-forward svc/${SERVICE_NAME} ${SERVICE_PORT}:${SERVICE_PORT} -n ${NAMESPACE} &
                            PF_PID=\$!
                            
                            # Wait for port forward to establish
                            sleep 15
                            
                            # Test health endpoint multiple times
                            for i in {1..10}; do
                                if curl -f http://localhost:${SERVICE_PORT}/actuator/health; then
                                    echo "‚úÖ Health check \$i passed"
                                    sleep 5
                                else
                                    echo "‚ùå Health check \$i failed"
                                    kill \$PF_PID || true
                                    exit 1
                                fi
                            done
                            
                            # Kill port forward
                            kill \$PF_PID || true
                            echo "‚úÖ All PRODUCTION health checks passed"
                        """
                    }
                }
            }
        }
        
        stage('üí® Production Smoke Tests') {
            steps {
                script {
                    echo "üí® Running PRODUCTION smoke tests..."
                    
                    // Comprehensive smoke tests for production
                    sh """
                        echo "üí® Running PRODUCTION smoke tests..."
                        
                        # Check pods are running
                        kubectl get pods -l app=${SERVICE_NAME} -n ${NAMESPACE}
                        
                        # Check service is available
                        kubectl get svc ${SERVICE_NAME} -n ${NAMESPACE}
                        
                        # Check deployment status
                        kubectl describe deployment ${SERVICE_NAME} -n ${NAMESPACE}
                        
                        # Verify all pods are ready
                        kubectl wait --for=condition=ready pod -l app=${SERVICE_NAME} -n ${NAMESPACE} --timeout=300s
                        
                        # Check resource usage
                        kubectl top pods -l app=${SERVICE_NAME} -n ${NAMESPACE} || echo "Metrics not available"
                    """
                    
                    // Service-specific production tests
                    dir(SERVICE_NAME) {
                        sh '''
                            echo "üß™ Running user service PRODUCTION smoke tests..."
                            
                            # Test 1: Check if service is registered with Eureka
                            echo "‚úÖ Testing Eureka registration in PRODUCTION..."
                            
                            # Test 2: Check database connectivity
                            echo "‚úÖ Testing database connectivity in PRODUCTION..."
                            
                            # Test 3: Check API endpoints availability
                            echo "‚úÖ Testing API endpoints in PRODUCTION..."
                            
                            echo "‚úÖ User service PRODUCTION smoke tests completed"
                        '''
                    }
                }
            }
        }
        
        stage('üìä Production Deployment Report') {
            steps {
                script {
                    echo "üìä Generating PRODUCTION deployment report..."
                    
                    // Get service information
                    def serviceInfo = sh(
                        script: """
                            echo "PRODUCTION Service Status:"
                            kubectl get svc ${SERVICE_NAME} -n ${NAMESPACE} -o wide
                            
                            echo "PRODUCTION Pod Status:"
                            kubectl get pods -l app=${SERVICE_NAME} -n ${NAMESPACE} -o wide
                            
                            echo "PRODUCTION Deployment Status:"
                            kubectl get deployment ${SERVICE_NAME} -n ${NAMESPACE} -o wide
                            
                            echo "PRODUCTION Ingress Status:"
                            kubectl get ingress -n ${NAMESPACE} || echo "No ingress found"
                        """,
                        returnStdout: true
                    )
                    
                    echo "üìã PRODUCTION Service Information:\n${serviceInfo}"
                    
                    // Create production deployment report
                    writeFile file: 'production-deployment-report.txt', text: """
PRODUCTION DEPLOYMENT REPORT
============================

Service: ${SERVICE_NAME}
Image: ${ACR_NAME}.azurecr.io/${SERVICE_NAME}:${env.IMAGE_TAG}
Namespace: ${NAMESPACE}
Build: ${env.BUILD_NUMBER}
Branch: ${env.BRANCH_NAME}
Approved by: ${env.APPROVER}
Deployment Strategy: ${params.DEPLOYMENT_TYPE}
Timestamp: ${new Date()}

Service Information:
${serviceInfo}

Status: SUCCESS
Environment: PRODUCTION
Health Checks: ${params.SKIP_HEALTH_CHECKS ? 'SKIPPED' : 'PASSED'}
"""
                    
                    // Archive the report
                    archiveArtifacts artifacts: 'production-deployment-report.txt', fingerprint: true
                }
            }
        }
    }
    
    post {
        always {
            echo "üßπ Cleaning up PRODUCTION build..."
            
            // Clean workspace using plugin
            cleanWs()
            
            // Clean up old deployments (keep more for production)
            sh """
                echo "üßπ Cleaning up old PRODUCTION deployments..."
                kubectl get replicaset -n ${NAMESPACE} -o name | grep ${SERVICE_NAME} | sort -r | tail -n +6 | xargs -r kubectl delete -n ${NAMESPACE} || true
            """
        }
        
        success {
            echo "üéâ PRODUCTION DEPLOYMENT SUCCESS! üéâ"
            echo "‚úÖ ${SERVICE_NAME} v${env.IMAGE_TAG} is now LIVE in PRODUCTION"
            echo "üê≥ Image: ${ACR_NAME}.azurecr.io/${SERVICE_NAME}:${env.IMAGE_TAG}"
            echo "üåê Namespace: ${NAMESPACE}"
            echo "üë§ Approved by: ${env.APPROVER}"
            echo "üîß Used Azure CLI Plugin successfully!"
            echo "üöÄ PRODUCTION deployment completed successfully!"
            
            // You can add success notifications here (Slack, Teams, email, etc.)
        }
        
        failure {
            echo "üö® PRODUCTION DEPLOYMENT FAILED! üö®"
            echo "‚ùå Rolling back to previous PRODUCTION version..."
            
            script {
                try {
                    sh """
                        echo "üîÑ Rolling back PRODUCTION deployment..."
                        kubectl rollout undo deployment/${SERVICE_NAME} -n ${NAMESPACE}
                        kubectl rollout status deployment/${SERVICE_NAME} -n ${NAMESPACE} --timeout=600s
                        echo "‚úÖ PRODUCTION rollback completed"
                    """
                } catch (Exception e) {
                    echo "‚ùå PRODUCTION rollback failed: ${e.message}"
                    echo "üö® URGENT: Manual intervention required for PRODUCTION!"
                }
            }
            
            // You can add failure notifications here (urgent alerts)
        }
        
        unstable {
            echo "‚ö†Ô∏è PRODUCTION deployment is unstable"
            echo "Some tests may have failed - please review immediately"
            echo "Consider rolling back if issues persist"
        }
        
        aborted {
            echo "‚è∏Ô∏è PRODUCTION deployment was aborted"
            echo "No changes were made to PRODUCTION environment"
        }
    }
} 